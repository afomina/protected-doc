<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
    	<property name="hbm2dll.auto">create-drop</property>
        <property name="show_sql">false</property>
        <property name="format_sql">true</property>
        <property name="dialect">pack.hibernate.SQLiteDialect</property>
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:file_hash.db</property>
        <property name="connection.username"></property>
        <property name="connection.password"></property>
         
        <mapping class="pack.protdoc.model.User"/>
        <mapping class="pack.protdoc.model.UserGroup"/>
        <mapping class="pack.protdoc.model.Message"/>
        <mapping class="pack.protdoc.model.SecurityLevel"/>
    </session-factory>
</hibernate-configuration>